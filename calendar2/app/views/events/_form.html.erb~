<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :starttime %><br />
    <%= f.datetime_select :starttime %>
  </div>
  <div class="field">
    <%= f.label :endtime %><br />
    <%= f.datetime_select :endtime %>
  </div>
  <div class="field">
    <%= f.label :repeat %><br />
    <%= f.check_box :repeat %>
  </div>
  <div class="field">
    <%= f.label :daily %><br />
    <%= f.check_box :daily %>
  </div>
  <div class="field">
    <%= f.label :weekly %><br />
    <%= f.check_box :weekly %>
  </div>
  <div class="field">
    <%= f.label :monthly %><br />
    <%= f.check_box :monthly %>
  </div>
  <% @users.each do |p| %>
    <div class="field">
    <%= f.radio_button :user_id, p.id %>
    <%= f.label :user_id, p.name %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
