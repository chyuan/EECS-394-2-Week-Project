<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Starttime</th>
    <th>Endtime</th>
    <th>Repeat</th>
    <th>Daily</th>
    <th>Weekly</th>
    <th>Monthly</th>
    <th>User</th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.starttime %></td>
    <td><%= event.endtime %></td>
    <td><%= event.repeat %></td>
    <td><%= event.daily %></td>
    <td><%= event.weekly %></td>
    <td><%= event.monthly %></td>
    <td><%= User.find_by_id(@event.user_id)[:name] %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

